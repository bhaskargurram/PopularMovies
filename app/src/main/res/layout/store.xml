<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bhaskar.popularmovies.view.DetailActivity"
    tools:showIn="@layout/activity_detail_frag">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/overview_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Overview"
                        android:textSize="20sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/release_date_text"
                        style="@style/detail_activity_style"
                        android:text="release date" />

                    <TextView
                        android:id="@+id/original_title_text"
                        style="@style/detail_activity_style"
                        android:text="original title" />

                    <TextView
                        android:id="@+id/original_language_text"
                        style="@style/detail_activity_style"
                        android:text="original language" />

                    <TextView
                        android:id="@+id/adult_text"
                        style="@style/detail_activity_style"
                        android:text="adult?" />

                    <TextView
                        android:id="@+id/popularity_text"
                        style="@style/detail_activity_style"
                        android:text="popularity" />

                    <TextView
                        android:id="@+id/vote_average_text"
                        style="@style/detail_activity_style"
                        android:text="average vote" />

                    <TextView
                        android:id="@+id/vote_count_text"
                        style="@style/detail_activity_style" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:elevation="5dp">

                <ListView
                    android:id="@+id/listview_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>